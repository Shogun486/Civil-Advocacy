<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutOfficial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000DFF">

    <TextView
        android:id="@+id/textViewOfficialUserLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#8E0C79"
        android:text="233 LaSalle Drive 60435"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewOfficialName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danny Davis"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/textViewOfficialParty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Democratic Party)"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textViewOfficialOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U.S. Representative"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.14" />

    <ImageView
        android:id="@+id/imageViewOfficialPolitician"
        android:layout_width="174dp"
        android:layout_height="220dp"
        android:onClick="goToPhotoDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialParty"
        app:srcCompat="@drawable/missing" />

    <ImageView
        android:id="@+id/imageViewOfficialFacebook"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="2dp"
        android:onClick="goToFacebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialWebsiteData"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/imageViewOfficialYoutube"
        android:layout_width="55dp"
        android:layout_height="41dp"
        android:onClick="goToYoutube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewOfficialFacebook"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/youtube" />

    <ImageView
        android:id="@+id/imageViewOfficialTwitter"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:onClick="goToTwitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewOfficialYoutube"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/twitter" />

    <ImageView
        android:id="@+id/imageViewOfficialParty"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:onClick="goToPartyPage"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintEnd_toEndOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintStart_toStartOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/dem_logo" />

    <TextView
        android:id="@+id/textViewOfficialAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.296" />

    <TextView
        android:id="@+id/textViewOfficialAddressData"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:onClick="goToAddress"
        android:text="2598 Rayburn House Office Building Washington, DC"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.317" />

    <TextView
        android:id="@+id/textViewOfficialPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Phone:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialAddress" />

    <TextView
        android:id="@+id/textViewOfficialPhoneData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToCall"
        android:text="(202) 225-6789"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewOfficialAddressData"
        app:layout_constraintTop_toTopOf="@+id/textViewOfficialPhone" />

    <TextView
        android:id="@+id/textViewOfficialEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Email:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialPhone" />

    <TextView
        android:id="@+id/textViewOfficialEmailData"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:onClick="goToEmail"
        android:text="davisk@mail.house.gov"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewOfficialPhoneData"
        app:layout_constraintTop_toTopOf="@+id/textViewOfficialEmail" />

    <TextView
        android:id="@+id/textViewOfficialWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Website:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialEmail" />

    <TextView
        android:id="@+id/textViewOfficialWebsiteData"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:onClick="goToWebsite"
        android:text="https://davis.house.gov/"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewOfficialEmailData"
        app:layout_constraintTop_toTopOf="@+id/textViewOfficialWebsite" />
</androidx.constraintlayout.widget.ConstraintLayout>