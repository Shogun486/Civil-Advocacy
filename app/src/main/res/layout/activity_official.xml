<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutOfficial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000DFF">

    <TextView
        android:id="@+id/textViewOfficialUserLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#8E0C79"
        android:text="233 LaSalle Drive 60435"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewOfficialName"
        android:layout_width="234dp"
        android:layout_height="30dp"
        android:text="Danny Davis"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.012" />

    <TextView
        android:id="@+id/textViewOfficialParty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Democratic Party)"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialOffice"
        app:layout_constraintVertical_bias="0.012" />

    <TextView
        android:id="@+id/textViewOfficialOffice"
        android:layout_width="213dp"
        android:layout_height="67dp"
        android:text="U.S. Representative"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOfficialPolitician"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.093" />

    <ImageView
        android:id="@+id/imageViewOfficialPolitician"
        android:layout_width="163dp"
        android:layout_height="216dp"
        android:onClick="goToPhotoDetail"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056"
        app:srcCompat="@drawable/missing" />

    <ImageView
        android:id="@+id/imageViewOfficialFacebook"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:onClick="goToFacebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialParty"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/imageViewOfficialYoutube"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:onClick="goToYoutube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewOfficialFacebook"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/youtube" />

    <ImageView
        android:id="@+id/imageViewOfficialTwitter"
        android:layout_width="47dp"
        android:layout_height="50dp"
        android:onClick="goToTwitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewOfficialYoutube"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/twitter" />

    <ImageView
        android:id="@+id/imageViewOfficialParty"
        android:layout_width="70dp"
        android:layout_height="47dp"
        android:onClick="goToPartyPage"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewOfficialTwitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewOfficialTwitter"
        app:srcCompat="@drawable/dem_logo" />

    <TextView
        android:id="@+id/textViewOfficialAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.388" />

    <TextView
        android:id="@+id/textViewOfficialAddressData"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:onClick="goToAddress"
        android:text="2598 Rayburn House Office Building Washington, DC"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewOfficialPhoneData"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialUserLocation"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/textViewOfficialPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Phone:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialAddress" />

    <TextView
        android:id="@+id/textViewOfficialPhoneData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="goToCall"
        android:text="(202) 225-6789"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewOfficialPhone"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialPhone" />

    <TextView
        android:id="@+id/textViewOfficialEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Email:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialPhone" />

    <TextView
        android:id="@+id/textViewOfficialEmailData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="goToEmail"
        android:text="davisk@mail.house.gov"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewOfficialPhoneData"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialEmail" />

    <TextView
        android:id="@+id/textViewOfficialWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Website:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialEmail" />

    <TextView
        android:id="@+id/textViewOfficialWebsiteData"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="goToWebsite"
        android:text="https://davis.house.gov/"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewOfficialEmailData"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialWebsite" />
</androidx.constraintlayout.widget.ConstraintLayout>